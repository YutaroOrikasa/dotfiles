#!/bin/bash

# public domain


if [ -n "$DISPLAY" ]; then
    exit 0
else

    # On graphical mode, exit with success.
    # On terminal mode (not gui available),
    # emacs can't launch (because of ridirect to /dev/null)
    # and exit with error code.
    if emacs -Q --eval='(kill-emacs)' </dev/null 2>/dev/null;then
        exit 0
    fi
fi

# not gui available
exit 1
