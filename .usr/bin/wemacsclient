#!/bin/bash

# public domain

# emacs on window system
# when window can not be opened, execute emacs on console

for arg in "$@";do
    case "$arg" in
        -nw|-t|--tty)
             emacsclient "$@"
             exit
             ;;
    esac
done

if graphical_emacs_ok; then
    emacsclient -nc "$@"
else
    emacsclient "$@"
fi
